<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/positionRestaurant_textView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="10."
            android:textAlignment="textEnd"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/restaurantName_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Restaurantul"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/routeRestaurant_imageButton"
            app:layout_constraintStart_toEndOf="@+id/positionRestaurant_textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/restaurantAddress_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="adresa"
            android:textAlignment="inherit"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/routeRestaurant_imageButton"
            app:layout_constraintStart_toEndOf="@+id/positionRestaurant_textView"
            app:layout_constraintTop_toBottomOf="@+id/restaurantName_textView" />

        <ImageButton
            android:id="@+id/routeRestaurant_imageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_rectangle"
            android:src="@android:drawable/ic_menu_directions"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>


</LinearLayout>